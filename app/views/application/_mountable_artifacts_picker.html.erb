<div class="gallery-icons" data-mm-gallery-association="true">
  <%= form.input "#{attribute_name}_tokens", value: artifacts.map(&:id).join(","), as: :hidden %>
  <ul class="active-artifacts">
  </ul>
  <div class="modal fade artifact-picker">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">×</button>
      <h3><%= t('mg.choose_artifacts') %></h3>
    </div>
    <div class="modal-body">
      <p>One fine body…</p>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn close-button" data-dismiss="modal"><%= t('mg.close') %></a>
      <a href="#" class="btn btn-primary save-button"><%= t('mg.save_changes') %></a>
    </div>
  </div>
  <%= link_to t('mg.manage'), '#', class: 'btn mini', 'data-mm-gallery-association' => "#{object.class.to_s};#{object.id}" %>
</div>

