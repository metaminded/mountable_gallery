<div data-mm-gallery-association="true">
  <ul class="active-artifacts" style="outline: 1px solid red">
    <% artifacts.each do |artifact| %>
      <li><%= render artifact %></li>
    <% end -%>
  </ul>
  <div class="modal fade artifact-picker">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">×</button>
      <h3>Modal header</h3>
    </div>
    <div class="modal-body">
      <p>One fine body…</p>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn" data-dismiss="modal">Close</a>
      <a href="#" class="btn btn-primary">Save changes</a>
    </div>
  </div>
  <%= link_to "+", '#', class: 'btn mini', 'data-mm-gallery-association' => "#{object.class.to_s};#{object.id}" %>
</div>

